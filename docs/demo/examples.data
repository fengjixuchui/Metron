class TilelinkDevice {
public:

  TilelinkDevice() {
    test_reg = 0;
    oe = 0;
  }

  tilelink_d tld;
  tilelink_a tla;

  void tock() {
    if (oe) {
      tld.d_opcode = TL::AccessAckData;
      tld.d_data   = test_reg;
      tld.d_valid  = 1;
    }
    else {
      tld.d_opcode = TL::AccessAckData;
      tld.d_data   = DONTCARE;
      tld.d_valid  = 0;
    }
  }

  void tick() {
    if (tla.a_address == 0x1234) {
      if (tla.a_opcode == TL::PutFullData && tla.a_valid) {
        test_reg = tla.a_data;
      } else if (tla.a_opcode == TL::Get) {
        oe = 1;
      }
    }
  }

private:
  logic<32> test_reg;
  logic<1>  oe;
};

